<!--pages/userCenter/userCenter.wxml-->
<view class="flex-col justify-start items-center page">
  <view class="flex-col section">
    <view class="flex-row section_2">
      <view class="flex-col justify-start items-start text-wrapper"><text class="text font">用户中心</text></view>
    </view>
    <view class="mt-26 flex-col">
      <text class="self-start text_2">探索你自己……</text>
      <view class="flex-row self-stretch section_3 mt-11">
        <view class="flex-col group">
          <text class="self-start font text_3 font2">用户名称</text>
          <view class="flex-col justify-start items-start self-stretch section_4">
            <view class="flex-col justify-start items-center text-wrapper_2">
              <text class="font text_5 font2">{{userInfo.nickName}}</text>
            </view>
          </view>
        </view>
        <view class="flex-col group">
          <image class="self-start image_2 ml-73" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        </view>
      </view>
    </view>
  </view>
</view>